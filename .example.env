# DATABASE
TYPEORM_CONNECTION=postgres
TYPEORM_HOST=localhost
TYPEORM_PORT=5432
TYPEORM_USERNAME=dbuser
TYPEORM_PASSWORD=dbpass
TYPEORM_DATABASE=plantcaredb
TYPEORM_LOGGING=true
TYPEORM_MIGRATIONS_RUN=false
TYPEORM_SYNCHRONIZE=false

# TYPEORM CLI
TYPEORM_MIGRATIONS_DIR=src/database/migration
TYPEORM_MIGRATIONS=src/database/migration/*.ts
TYPEORM_ENTITIES=src/modules/*/*.entity.ts

# JWT
JWT_ACCESS_TOKEN_SECRET=plantcare
JWT_ACCESS_TOKEN_EXPIRATION=3600
JWT_CHANGE_EMAIL_TOKEN_SECRET=plantcare
JWT_CHANGE_EMAIL_TOKEN_EXPIRATION=3600
JWT_VERIFICATION_TOKEN_SECRET=plantcare
JWT_VERIFICATION_TOKEN_EXPIRATION=3600
JWT_PASSWORD_RESET_TOKEN_SECRET=plantcare
JWT_PASSWORD_RESET_TOKEN_EXPIRATION=3600
JWT_BCRYPT_SALT_ROUNDS=10